<p id="notice"><%= notice %></p>

<h1 class="heading">My 練習メニュー</h2>

<h2 class="title"><%= link_to 'メニューを記録する', new_menu_path %></h2>



<div class="menues">
  <% @menus.each do |menu| %>
  <div class="menu clearfix">
    
    <h3 class="menu-remark"><%= link_to menu.remark, menu %>（<%= menu.date %>）</h3>
    <div>
      <%= link_to '編集', edit_menu_path(menu) %>
      <%= link_to '削除', menu, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    
    <div class="menu-contents">
      <h3>Movement</h3>
      <p>　<%= simple_format(menu.movement) %></p>
    </div>
    <div class="menu-contents">
      <h3>Music</h3>
      <p>　<%= simple_format(menu.music) %></p>
    </div>   
    <div class="menu-image">
      <p>　<%= menu.image %></p>
    </div>       
    
  

  </div>
  <% end %>

</div>



